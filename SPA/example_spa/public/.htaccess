
RewriteEngine On
RewriteBase /

# The request is a regular file with size > 0
# The request is to a file that is a symlink
# The request is to a directory that exists
RewriteCond %{REQUEST_FILENAME} -s [OR]
RewriteCond %{REQUEST_FILENAME} -l [OR]
RewriteCond %{REQUEST_FILENAME} -d

# if any of the above conditions are true, then simply handle the request as-is
# if none of the above match, then rewrite to index.php
RewriteRule ^.*$ - [NC,L]
RewriteRule ^.*$ index.php [NC,L]

# Disallow directory content listing
# Disallow execution of cgi files in this folder
Options -Indexes
Options -ExecCGI