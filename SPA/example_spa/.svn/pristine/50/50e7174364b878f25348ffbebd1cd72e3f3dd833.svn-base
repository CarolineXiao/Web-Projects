#application {
    width:99%;
    margin:0px auto;
}

.btn-wrapper {
    padding-bottom:10px;
}

.btn-add-new {
    margin-left:20px;
}

.post {
    display:block;
    border-bottom:1px dashed #efefef;
    padding:10px 0px;
}

.user {
    font-style:italic;
    margin:10px 0px;
}

textarea {
    resize:none !important;
}

/** Bootsrap fixes */
.bg-danger {
    background:#c9302c;
    color:#ffffff;
}

.bg-danger a {
    color:#ffffff;
}

.table > thead > tr > th, .table > tbody > tr > th, 
.table > tfoot > tr > th, .table > thead > tr > td, 
.table > tbody > tr > td, .table > tfoot > tr > td {
    padding:18px 8px;
}

.btn {
    margin-bottom:10px;
}

.right {
    float:right;
    clear:right;
}

.clear {
    display:block;
    clear:both;
}